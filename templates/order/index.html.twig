{% extends 'base.html.twig' %}

{% block title %}Valider ma commande{% endblock %}

{% block content %}
    <style>
    .form-check
    {
        background-color: #f4f8ff;
        padding-left: 20px 65px;
        margin-top: 5px;
        
    }
    .col-form-label
    {
        font-weight: bold;
        
    }

    .order-summary
    {
        background-color: #f4f8ff;
        padding: 20px;
        margin-top: 22px;
    }
    </style>
    <h2> je passe ma commande</h2>

    <p>choisissez vos préférences  avant de passer votre commande sur la boutique</p>
    <hr>
<div class="row">
    <div class="col-md-6">
     
        {% set formHtml %}
            {{form_start(form,{action:path('order_recap')})}}
            
            {{form_label(form.adressess,'Choisissez votre adresse de livraison')}} 
            <a href="{{path('account_adresse_add')}}"> Ajouter une nouvelle adresse</a>
            {{form_end(form)}}
        {% endset %}
            {{formHtml | replace({'[br]':'<br/>'})| raw }}
        <b>Choisir mon transporteur</b>
    </div>

<div class="col-md-6">
    <div class="text-center">
        <b>Récapitulatif  de ma commande </b></br>
        <p> Retrouvez le récaptitulatif de vos produits</p>
     <div class="order-summary">   
        {% for key,product in cart %}
            <div class="row {% if key >0 %}mt-2{% endif %}">
            <div class="col-2 my-auto"><img src="/Images/{{product.product.illustration}}" alt="{{product.product.name}}" height="75px"></div><br>
            <div class="col-8 my-auto"> {{product.product.name}} <br>
            <small>{{product.product.subtitle}}</small> </div>
            <div class="col">× {{product.quantity}}</div> 
        </div>
            
        <br>
            
            {% endfor %}
      </div>
            
            <b>Boutton pour payer</b>
     </div>
  </div>
</div>
{% endblock %}
