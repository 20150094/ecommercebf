{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block content %}
<h1>
    Mon panier
</h1>
Retrouver l'ensemble des produits que vous avez acheté
{% if cart | length >0 %}
<table class="table" mt-3>
  <thead>
    <tr>
      
      <th scope="col">Produit</th>
      <th scope="col"></th>
      <th scope="col">Quantité</th>
      <th scope="col">Prix</th>
      <th scope="col">Total</th>
    </tr>
  </thead>
  <tbody>
    {% set total= null %}  
  {% for product in cart %}
    <tr>
      <th>
      <img src="/Images/{{product.product.illustration}}" alt="{{product.product.name}}" height="75px"><br>
      
      </th>
      <td>
      {{product.product.name}}<br>
      <small>{{product.product.subtitle}}</small>
      </td>
      <td>
          <a href="{{path('decrease_to_cart',{'id':product.product.id})}}">
              <img src={{asset('/assets/Img/minus.png')}} height="15px" alt="Retirer un  produit">
          </a>
      ×{{product.quantity}}
          <a href="{{path('add_to_cart',{'id':product.product.id})}}">
              <img src={{asset('/assets/Img/add.png')}} height="15px" alt="Ajouter un produit">
          </a>
      </td>
      <td>{{(product.product.prix/100) |number_format(2,',','.')}} fcfa</td>
      <td>{{((product.product.prix*product.quantity)/100) |number_format(2,',','.')}} fcfa</td>
    <td>
    <a href="{{path('delete_to_cart',{'id':product.product.id})}}">
        <img src={{asset('/assets/Img/delete.png')}} height="18px" alt="Supprimer mon produit">
    </a>
    </td>
    </tr>
     {% set total= total+ product.product.prix*product.quantity %}
   {% endfor %}
    
  </tbody>
</table>



<div class="text-right mb-5">
<b> Nombre de produit : </b><strong>{{cart|length}}</strong><br>
<b> Total de mon panier : </b> <strong>{{( total /100) |number_format(2,',','.')}} fcfa</strong></br></br></br>

<a href="{{path("order")}}" class="btn btn-success btn-block">Valider mon panier</a>
</div>
{% else %}
<hr>
<p><b> votre panier est vide</p></b>

{% endif %}
{% endblock %}
